

<h1> Create a new cat </h1>

<form action=<%= "cats_url" %> method="POST">

    <label for="name"> Name <label>
    <input type="text" id="name" name="cat[name]">

    <br>

    <label>
        Sex
        <input type="radio" value="M" name="cat[sex]">M
        <input type="radio" value="F" name="cat[sex]">F
    </label>

    <br>

    <label> 
        Color
        <select name="cat[color]">
            
            <option disabled selected>--- Please Select Color ---</option>
            <%COLORS.each do |color| %>
                <option value="<%= color %>"><%= color.capitalize %></option>
            <% end %>

        </select>
    </label>

    <br>

    <label>
        Birth Date
        <input type="date" name="cat[birth_date]">
    </label>

    <br>

    <label>
        Description
        <textarea name="cat[description]"></textarea>
    </label>

    <br>

    <label>
        <input type="submit" value="Create Cat">
    </label>

</form>

